    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const classifyBtn = document.getElementById('classify-btn');
            const resultPlaceholder = document.getElementById('result-placeholder');
            const setosaCard = document.getElementById('setosa-card');
            const versicolorCard = document.getElementById('versicolor-card');
            const virginicaCard = document.getElementById('virginica-card');
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            // Initialize chart
            const ctx = document.getElementById('measurementChart').getContext('2d');
            const measurementChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Sepal Length', 'Sepal Width', 'Petal Length', 'Petal Width'],
                    datasets: [{
                        label: 'Your Input',
                        data: [0, 0, 0, 0],
                        backgroundColor: 'rgba(76, 175, 80, 0.2)',
                        borderColor: 'rgba(76, 175, 80, 1)',
                        pointBackgroundColor: 'rgba(76, 175, 80, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(76, 175, 80, 1)'
                    }]
                },
                options: {
                    scales: {
                        r: {
                            angleLines: {
                                display: true
                            },
                            suggestedMin: 0,
                            suggestedMax: 8
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Iris Measurements Comparison'
                        }
                    }
                }
            });
            
            // Tab functionality
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabId = tab.getAttribute('data-tab');
                    
                    // Remove active class from all tabs and contents
                    tabs.forEach(t => t.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));
                    
                    // Add active class to clicked tab and corresponding content
                    tab.classList.add('active');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                });
            });
            
            classifyBtn.addEventListener('click', function() {
                // Get input values
                const sepalLength = parseFloat(document.getElementById('sepal-length').value) || 0;
                const sepalWidth = parseFloat(document.getElementById('sepal-width').value) || 0;
                const petalLength = parseFloat(document.getElementById('petal-length').value) || 0;
                const petalWidth = parseFloat(document.getElementById('petal-width').value) || 0;
                
                // Validate inputs
                if (sepalLength < 4 || sepalLength > 8 || 
                    sepalWidth < 2 || sepalWidth > 4.5 || 
                    petalLength < 1 || petalLength > 7 || 
                    petalWidth < 0.1 || petalWidth > 2.5) {
                    alert('Please enter valid measurements within the expected ranges.');
                    return;
                }
                
                // Update chart with new data
                measurementChart.data.datasets[0].data = [sepalLength, sepalWidth, petalLength, petalWidth];
                measurementChart.update();
                
                // Simulate classification
                simulateClassification(sepalLength, sepalWidth, petalLength, petalWidth);
            });
            
            function simulateClassification(sepalLength, sepalWidth, petalLength, petalWidth) {
                // Hide placeholder and any previously shown cards
                resultPlaceholder.style.display = 'none';
                setosaCard.style.display = 'none';
                versicolorCard.style.display = 'none';
                virginicaCard.style.display = 'none';
                
                // Simple simulation based on typical iris measurements
                // In reality, this would be done by a trained ML model
                let species;
                let confidence;
                
                if (petalLength < 3 && petalWidth < 1) {
                    species = 'setosa';
                    confidence = 92 + Math.floor(Math.random() * 5);
                } else if (petalLength < 5 && petalWidth < 1.8) {
                    species = 'versicolor';
                    confidence = 87 + Math.floor(Math.random() * 8);
                } else {
                    species = 'virginica';
                    confidence = 89 + Math.floor(Math.random() * 7);
                }
                
                // Show the appropriate card
                document.getElementById(`${species}-card`).style.display = 'block';
                document.getElementById(`${species}-confidence`).textContent = `${confidence}%`;
            }
            
            // Pre-fill with example values for demonstration
            document.getElementById('sepal-length').value = 5.4;
            document.getElementById('sepal-width').value = 3.2;
            document.getElementById('petal-length').value = 4.5;
            document.getElementById('petal-width').value = 1.5;
            
            // Trigger initial chart update
            classifyBtn.click();
        });
    </script>
</body>
</html>
